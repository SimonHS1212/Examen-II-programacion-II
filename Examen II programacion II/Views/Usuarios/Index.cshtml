@model IEnumerable<SistemaReparaciones.Models.Usuario>

@{
    ViewBag.Title = "Usuarios";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Lista de Usuarios</h1>
    <a href="@Url.Action("Create")" class="btn btn-primary mb-3">Crear Nuevo Usuario</a>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Nombre</th>
                <th>Correo Electrónico</th>
                <th>Teléfono</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var usuario in Model)
            {
                <tr>
                    <td>@usuario.Nombre</td>
                    <td>@usuario.CorreoElectronico</td>
                    <td>@usuario.Telefono</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = usuario.UsuarioID })" class="btn btn-warning btn-sm">Editar</a>
                        <a href="@Url.Action("Details", new { id = usuario.UsuarioID })" class="btn btn-info btn-sm">Detalles</a>
                        <a href="@Url.Action("Delete", new { id = usuario.UsuarioID })" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
